<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manage">

    <TextView
        android:id="@+id/tv_total_amount_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="10dp"
        android:text="Amount Budgeted"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtBudgetAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAmountSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="27dp"
        android:text="txtAmountSpent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_sort_by"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_goal" />

    <TextView
        android:id="@+id/tv_amount_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="11dp"
        android:text="Amount Spent"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAmountSpent"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBudgetAmount" />

    <TextView
        android:id="@+id/txtBudgetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="22dp"
        android:text="txtBudgetAmount"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_amount_goal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_amount_saved" />

    <!-- Sort button -->

    <Button
        android:id="@+id/btn_edit_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/Teal"
        android:text="Edit Goal"
        android:textColorLink="@color/Teal"
        app:layout_constraintBottom_toTopOf="@+id/debitList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="269dp"
        android:backgroundTint="@color/Teal"
        android:text="Sort by Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAmountSpent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/debitList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="75dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btnCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sort_by" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="74dp"
        android:text="txtCategory"
        android:textColor="@color/Teal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtBudgetAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCategory"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddDebit"
        app:srcCompat="@drawable/category" />

    <ImageButton
        android:id="@+id/btnAddDebit"
        android:layout_width="82dp"
        android:layout_height="75dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add" />

    <!-- Floating button for adding a new entry -->


</androidx.constraintlayout.widget.ConstraintLayout>