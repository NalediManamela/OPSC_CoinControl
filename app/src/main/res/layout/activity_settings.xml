<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <!-- Mode Toggle (Dark & Light) -->
    <View
        android:id="@+id/barSettings"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#9CDCE4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Header -->
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Dark Mode Toggle Label -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/barSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Dark Mode Toggle Switch -->
    <Switch
        android:id="@+id/darkLightSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark and Light"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        android:layout_marginTop="8dp" />

    <!-- Dark/Light Mode Icon -->

    <!-- Language Label -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/darkLightSwitch"
        app:layout_constraintTop_toBottomOf="@+id/barSettings"
        app:srcCompat="@drawable/darkandlight" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/darkLightSwitch"
        app:layout_constraintStart_toStartOf="@+id/darkLightSwitch"
        android:layout_marginTop="16dp" />

    <!-- Language Switch -->
    <Switch
        android:id="@+id/Languageswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afrikaans"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        android:layout_marginTop="8dp" />

    <!-- Language Icon -->

    <!-- About App Button -->

    <!-- Terms and Conditions Button -->

    <!-- Privacy Policy Button -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="86dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/aboutAppButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Languageswitch"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/language" />

    <Button
        android:id="@+id/aboutAppButton"
        android:layout_width="427dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/Teal"
        android:text="About App"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Languageswitch" />

    <Button
        android:id="@+id/termsButton"
        android:layout_width="474dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/Teal"
        android:text="Terms and Conditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutAppButton" />

    <Button
        android:id="@+id/privacyPolicyButton"
        android:layout_width="409dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/Teal"
        android:text="Privacy Policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
