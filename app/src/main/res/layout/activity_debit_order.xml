<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DebitOrder">

    <!-- Top Bar for Debit Orders -->
    <View
        android:id="@+id/barDebitOrders"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#9CDCE4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title for Debit Orders -->
    <TextView
        android:id="@+id/lblDebit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Debit Orders"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barDebitOrders" />

    <!-- RecyclerView for debit entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_entries2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/barDebitOrders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView3" />

    <!-- Summary Text -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SUMMARY:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rv_entries2"
        app:layout_constraintStart_toStartOf="@id/rv_entries2"
        android:layout_marginStart="16dp" />

    <!-- Total Label -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="@id/textView3" />

    <!-- Total Amount Display -->
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="R0.00"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintStart_toEndOf="@id/textView4" />

    <!-- Due Label -->
    <TextView
        android:id="@+id/Due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Due:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="@id/textView4" />

    <!-- Due Amount Display -->
    <TextView
        android:id="@+id/txtDUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="R0.00"
        app:layout_constraintTop_toTopOf="@id/Due"
        app:layout_constraintStart_toEndOf="@id/Due" />

    <!-- Category Button -->
    <ImageButton
        android:id="@+id/btnCategory"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:srcCompat="@drawable/category" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCategory"
        app:layout_constraintEnd_toStartOf="@id/btnadd"
        app:srcCompat="@drawable/setting" />

    <!-- Add Button -->
    <ImageButton
        android:id="@+id/btnadd"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add" />

</androidx.constraintlayout.widget.ConstraintLayout>
