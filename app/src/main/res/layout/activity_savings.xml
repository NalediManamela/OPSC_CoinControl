<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Savings">

    <TextView
        android:id="@+id/tv_total_amount_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount Saved"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_amount_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R7 300"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_amount_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Goal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_goal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R12 000"
        android:textStyle="bold"
        android:textSize="24sp"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>